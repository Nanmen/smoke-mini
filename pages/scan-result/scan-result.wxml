<view class="container">
    <view class="wrapper">
        <view class="scan-wrapper">
            <text>n品种</text>
        </view>
        <view class="search-wrapper">
            <text>{{pager.total}}条数</text>
        </view>
    </view>
    <view class="content">
        <view wx:if="{{!qrCodeList || !qrCodeList.length}}" class='empty'>
            空空如也!
        </view>

        <block wx:else>
            <checkbox-group bindchange="checkboxChange">
                <label class="checkbox-list__label" wx:for="{{checkboxOption}}" wx:key="value">
                    <checkbox class="checkbox-list__checkbox" value="{{item.value}}" checked="{{item.checked}}"></checkbox>
                    <view class="label-wrapper">
                        <view class='label'>{{item.label}}</view>
                        <rich-text nodes="{{item.desc}}" class="desc"></rich-text>
                    </view>
                </label>
            </checkbox-group>

            <pagination
                    wx:if="{{pager.total / pager.pageSize > 1}}"
                    total="{{pager.total}}"
                    pageSize="{{pager.pageSize}}"
                    current="{{pager.current}}"
                    bind:onPageChange="onPageChange"></pagination>
        </block>


    </view>

    <view class="footer">
        <block wx:if="{{qrCodeList && qrCodeList.length}}">
            <view class='button-wrapper'>
                <button wx:if="{{checkedList.length === checkboxOption.length}}" class='cancel-select-all-btn' bind:tap="cancelSelectAll">取消全选</button>
                <button wx:else class='select-all-btn' bind:tap="selectAll">全选</button>
                <view class="divider-row"></view>
                <view class="divider">
                    <button disabled="{{!checkedList.length}}" class='delete-btn' bind:tap="remove">删除</button>
                    <button disabled="{{!checkedList.length}}"  class="download-btn" loading="{{downloadLoading}}" bind:tap="downloadExcel">下载excel</button>
                </view>

            </view>

            <view class="divider-column"></view>
        </block>

        <view class="scan" bind:tap="handleClick">
            扫一扫
        </view>
    </view>
</view>

page {
    overflow: hidden;
}
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.wrapper {
    padding: 32rpx 16rpx;
    display: flex;
    border-bottom: 2rpx solid #f5f5f5;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.scan-wrapper, .search-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.scan-wrapper {
    border-right: 2rpx solid #303030;
}

.scan-outline-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.content {
    flex: 1;
    overflow: auto;
}

.empty {
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.button-wrapper button[disabled] {
    color: #7f7f7f;
    background-color: #fff;
}

.cancel-select-all-btn, .select-all-btn,.delete-btn, .download-btn  {
    width: auto;
    background-color: #FFF;
    font-size: 26rpx;
    white-space: nowrap;
    margin: 0;
    border-radius: 0;
}

.cancel-select-all-btn, .select-all-btn {
    width: 100%;
    padding: 10rpx;
}

.delete-btn, .download-btn {
    flex: 1;
}


.delete-btn {
    border-right: 2rpx solid #d6e4ef;
    margin-right: 20rpx !important;
}


.checkbox-list__label {
    display: flex;
    align-items: flex-start;
    padding: 20rpx;
    border-bottom: 2rpx solid #d6e4ef;
    box-sizing: border-box;
    width: 100%;
}

.checkbox-list__checkbox {
    margin-top: 10rpx;
}

.label-wrapper {
    display: flex;
    justify-content: space-between;
    flex: 1;
}

.label {
    line-height: 60rpx;
    margin-left: 10rpx;
    flex: 1;
}

.desc {
    font-size: 28rpx;
    color: #dedede;
    margin-left: 10rpx;
    flex: 1;
}

.footer {
    box-shadow: 0 -1rpx 20rpx rgba(0,0,0,0.1);
    display: flex;
    justify-content: center;
}

.scan {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 120rpx;
}

.divider-column {
    height: 100%;
    border: 2rpx solid #d6e4ef;
}

.button-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.divider-row {
    width: 100%;
    border: 2rpx solid #d6e4ef;
}
.divider {
    width: 100%;
    padding: 16rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

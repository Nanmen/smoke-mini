page {
    background-color: #F5F5F5;
}

.empty {
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.card {
    margin: 32rpx;
    border: 2rpx solid #F5F5F5;
    box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.06);
    padding: 32rpx;
    border-radius: 16rpx;
    background-color: #FFF;
}

.new-form-button-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 32rpx 32rpx 0 32rpx;
    position: sticky;
    top: 0;
    z-index: 1;
}

.new-form-button {
    width: auto;
    padding: 6rpx 40rpx;
    background-color: #6190e8;
    border: 2rpx solid #4a81e7;
    color: #FFF;
    font-size: 26rpx;
    white-space: nowrap;
    margin: 0;
}

.button-wrapper button[disabled] {
    color: #7f7f7f;
    border: 2rpx solid #7f7f7f;
}

.button-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-top: 32rpx;
}

.button-wrapper button{
    width: auto;
    padding: 6rpx 40rpx;
    font-size: 26rpx;
    white-space: nowrap;
    margin: 0;
    background-color: #FFF;

}

.add, .edit {
    border: 2rpx solid #4a81e7;
    margin-right: 20rpx !important;
}

.remove {
    border: 2rpx solid #D9001B;
}

.one-line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
}

.user {
   white-space: nowrap;
}

.date {
    margin-right: 32rpx;
    flex: 1;
}
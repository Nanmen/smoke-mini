.wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 32rpx;
}

.card {
    background-color: #6190e8;
    flex: 1;
    box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.06);
    border-radius: 16rpx;
    padding: 32rpx;
    color: #FFF;
    margin:0 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.card:nth-child(2n+1) {
    margin-left: 0;
}

.card:nth-child(2n) {
    margin-right: 0;
}


.icon {
    width: 60rpx;
    height: 60rpx;
}

.text {
    font-size: 46rpx;
    line-height: 60rpx;
    margin-top: 26rpx;
}

.welcome {
    font-size: 50rpx;
    line-height: 60rpx;
    margin-bottom: 32rpx;
    margin-top: 200rpx;
    text-align: center;
}

.content {
    margin-top: 200rpx;
}

.section {
    padding: 32rpx;
}

.section__title{
    font-size: 32rpx;
    color: #666;
}

.picker,.input {
    margin-top: 16rpx;
    border: 2rpx solid #f5f5f5;
    padding: 16rpx;
    height: 46rpx;
    line-height: 46rpx;
    border-radius: 16rpx;
}
.button-wrapper{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 32rpx;
}

.button-wrapper button{
    width: auto;
    padding: 6rpx 40rpx;
    background-color: #6190e8;
    border: 2rpx solid #4a81e7;
    color: #FFF;
    font-size: 26rpx;
    white-space: nowrap;
    margin: 0;
    min-width: 200rpx;
}

.button-wrapper button[disabled] {
    color: #7f7f7f;
    border: 2rpx solid #7f7f7f;
}